<!--Events drop down category list-->
@model IEnumerable<Category>

<li class="dropdown">
    <a asp-controller="Event"
       asp-action="Index"
       class="dropdown-toggle" data-toggle="dropdown">Categories<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var category in Model)
        {
            <!--the route for the category with the category name displayed in the list-->
            <li>
                <a asp-controller="Event" asp-action="List"
                   asp-route-category="@category.CategoryName">@category.CategoryName</a>
            </li>
        }
        <!--the route without a category to display all events-->
        <li class="divider"></li>
        <li>
            <a asp-controller="Event" asp-action="List" asp-route-Category="">View all events</a>
        </li>
    </ul>
</li>